@BASE_IP = http://localhost:8080
@ITEMS_END_POINT = /api/v1/items
@LISTS_END_POINT = /api/v1/lists
@API_VERSION = api/v1
@LIST_ID = list_001
@ITEM_ID = item_001

# ============================================
# LISTS ENDPOINT TESTS
# ============================================


### Get all lists
GET {{BASE_IP}}{{LISTS_END_POINT}}
Content-Type: application/json


### Get single list by ID
GET {{BASE_IP}}{{LISTS_END_POINT}}?id={{LIST_ID}}
Content-Type: application/json


### Create a new list
POST {{BASE_IP}}{{LISTS_END_POINT}}
Content-Type: application/json

{
  "id": "{{LIST_ID}}",
  "title": "My Shopping List"
}


### Create another list with different ID
POST {{BASE_IP}}{{LISTS_END_POINT}}
Content-Type: application/json

{
  "id": "list_002",
  "title": "Work Tasks"
}


### Create list with auto-generated ID (example)
POST {{BASE_IP}}{{LISTS_END_POINT}}
Content-Type: application/json

{
  "id": "list_{{$timestamp}}",
  "title": "Dynamic List {{$randomInt}}"
}


### Update an existing list
PUT {{BASE_IP}}{{LISTS_END_POINT}}
Content-Type: application/json

{
  "id": "{{LIST_ID}}",
  "title": "Updated Shopping List"
}


### Delete a list
DELETE {{BASE_IP}}{{LISTS_END_POINT}}?id={{LIST_ID}}
Content-Type: application/json

